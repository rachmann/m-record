<Window x:Class="m_record.HelpDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Help" Height="500" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">
    <Grid Margin="20">
        <StackPanel Margin="20,0,10,20" Grid.Row="0" HorizontalAlignment="Center">
            <TextBlock Text="Recorder Help" FontWeight="Bold" FontSize="18" Margin="0,0,0,12" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Margin="0,0,10,10" Grid.Row="1" HorizontalAlignment="Center">
            <TextBlock Text="This application records keystrokes and can capture the screen."
            TextWrapping="Wrap" Margin="0,0,0,5" TextAlignment="Center"/>
            <TextBlock Text="Use the record button to start/stop key logging."
            TextWrapping="Wrap" Margin="0,0,0,10" TextAlignment="Center"/>
        </StackPanel>
        <StackPanel Margin="0,0,10,20" Grid.Row="2">
            <Grid Margin="0">
                <StackPanel Margin="20,0,10,20" Grid.Row="2" Grid.Column="0">
                    <TextBlock Text="Screen Shot: "
                     TextWrapping="Wrap"
                     Margin="0,0,0,10"
                     TextAlignment="Right"/>
                </StackPanel>
                <StackPanel Margin="0,0,10,20" Grid.Row="2" Grid.Column="1">
                    <TextBlock Text="While recording, you can add a screen shot by clicking the red button. This also adds an event in the keylog with the same timestamp as used in the filename of the screenshot."
                    TextWrapping="Wrap"
                    Margin="0,0,0,10"
                    TextAlignment="Left" />
                </StackPanel>
                <StackPanel Margin="20,0,10,20" Grid.Row="3" Grid.Column="0">
                    <TextBlock Text="Key Log file: "
                   TextWrapping="Wrap"
                   Margin="0,0,0,10"
                   TextAlignment="Right"/>
                </StackPanel>
                <StackPanel Margin="0,0,10,20" Grid.Row="3" Grid.Column="1">
                    <TextBlock Text="Stopping recording saves the key log, in the path set in settings ReportPath."
                    TextWrapping="Wrap"
                    Margin="0,0,0,10"
                    TextAlignment="Left"/>
                </StackPanel>
                <StackPanel Margin="20,0,10,20" Grid.Row="4" Grid.Column="0">
                    <TextBlock Text="Notification: "
                    TextWrapping="Wrap"
                    Margin="0,0,0,10"
                    TextAlignment="Right"/>
                </StackPanel>
                <StackPanel Margin="0,0,10,20" Grid.Row="4" Grid.Column="1">
                    <TextBlock Text="Stoping recording or saving a screen shot shows a notification at the bottom of the main window by default."
                    TextWrapping="Wrap" Margin="0,0,0,10" TextAlignment="Left"/>
                        <TextBlock Text="The notification area will disappear shortly if you don't hover over it or click into it."
                    TextWrapping="Wrap" Margin="0,0,0,10" TextAlignment="Left"/>
                        <TextBlock Text="You can make it disappear, or reappear, by clicking the green button."
                    TextWrapping="Wrap" Margin="0,0,0,10" TextAlignment="Left"/>
                    </StackPanel>
                <StackPanel Margin="20,0,10,20" Grid.Row="5" Grid.Column="0">
                    <TextBlock Text="Settings: "
                         TextWrapping="Wrap"
                         Margin="0,0,0,10"
                         TextAlignment="Right"/>
                </StackPanel>
                <StackPanel Margin="0,0,10,20" Grid.Row="5" Grid.Column="1">
                    <TextBlock Text="The Settings allows you to change notifications, dark mode, the record path for where logs are written, or..."
                    TextWrapping="Wrap"
                    Margin="0,0,0,10"
                    TextAlignment="Left"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="6" Grid.Column="1"  Margin="0,3,0,5" Width="60">
                    <Button Content="OK" Width="60" Click="OkButton_Click"/>
                </StackPanel>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="36.58" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
            </Grid>
        </StackPanel>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
    </Grid>
</Window>
